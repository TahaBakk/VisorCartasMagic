<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/ivPosterImage"
        android:layout_width="75dp"
        android:adjustViewBounds="true"
        android:maxHeight="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:layout_height="75dp"
        android:scaleType="fitXY"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="91%"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/ivPosterImage"
        android:layout_alignLeft="@+id/tvRarity"
        android:layout_alignStart="@+id/tvRarity"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvRarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="The Dark Knight"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_above="@+id/tvName"
        android:layout_toRightOf="@+id/ivPosterImage"
        android:layout_toEndOf="@+id/ivPosterImage"
        android:layout_marginBottom="13dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


</RelativeLayout>